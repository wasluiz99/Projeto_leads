@model ProjetoLeads.Models.Lead

@{
    ViewData["Title"] = "ConsultaLeads";
}
<div class="container mt-5">
    <h4>Consulta Lead</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="form-group">
            <form asp-action="ResultadoConsultaLeads">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    @* <span asp-validation-for="Nome" class="text-danger"></span> *@
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    @* <span asp-validation-for="Email" class="text-danger"></span> *@
                </div>
                <!-- Curso de Interesse -->
                <div class="col-md-6 mb-3">
                    <label asp-for="CursoInteresse" class="form-label"></label>
                    <select asp-for="CursoInteresse" class="form-select" asp-items="ViewBag.ListCursos">
                        <option value="">Selecione um curso...</option>
                    </select>
                    @* <span asp-validation-for="CursoInteresse" class="text-danger"></span> *@
                </div>
                <div class="form-group d-flex gap-2">
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                    <a class="btn btn-secondary" href="javascript:history.go(-1)">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>


